<div class="mt-3 d-grid gap-2 d-md-flex justify-content-md-evenly align-items-center">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tarefas</li>
            </ol>
        </nav>
        <h3> Lista de Tarefas </h3> 
        <div style="display:none;" id="current_member">
		    <%= current_member.id %>
	    </div>
        <%= link_to 'new', new_task_path %>
    </div>
    <hr>
    <table class='table' data-controller='tasks'>
    <thead>
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Prioridade</th>
        <th>Finalizada</th>
        <th>Ações</th>
    </tr>
</thead>
<tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= task.id %></td>
            <td><button data-action="click->tasks#show" data-task='<%= task.id%>'><%= task.name %></button></td>
            <td><%= task.priority %></td>
            <td><%= task.completed %></td>
            <td>
            <%= link_to t('Edit'), edit_task_path(task), class: 'btn btn-warning' %>
            <%= link_to t("Destroy"),task_path(task), data: { "turbo-method": :delete }, class: 'btn btn-danger'  %>
            </td>
        </tr>
        <% end %>
</tbody>
    </table>

    <div id='show-description'> 
        <div class="card">
            <h5 class="card-header" id='tarefa-nome'></h5>
            <div class="card-body">
                <p class="card-text" id='tarefa-descricao'>Clique no nome para obter a descrição da tarefa</p>
                <br/>
                <div id='form-to-include'>
                </div>
                <div>
                    <a href="#" id='link-editar'></a>
                    <a href="#" id='link-excluir'></a>
                </div>
            </div>
        </div>
    </div>