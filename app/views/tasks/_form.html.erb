<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description ,class:"form-control" %>
  </div>

  <div>
    <%= form.label :completed, style: "display: block" %>
    <%= form.check_box :completed, class: "form-checkbox" %>
  </div>

  <div>
    <%= form.label :due_date, style: "display: block" %>
    <%= form.date_field :due_date, disabled: 'disabled' ,class: "form-control" %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.select :priority, ['Baixa', 'Media', 'Alta'] ,class:"form-control" %>
  </div>

  
  <div>
    <%= form.submit 'Salvar', class: 'mt-3 btn btn-danger' %>
    <%= link_to t("back"), tasks_path, class: 'btn btn-secondary mt-3' %>
  </div>
<% end %>